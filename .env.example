# Single Supabase database with schema separation
DATABASE_URL="postgresql://username:password@db.supabase.co:5432/postgres"

# Schema names for each service
ACCOUNTS_SCHEMA="accounts"
PROVIDER_SCHEMA="provider"
BOOKING_SCHEMA="booking"
CONTENT_SCHEMA="content"
NOTIFICATION_SCHEMA="notification"

# Redis Configuration (for Redis Cloud use REDIS_URL)
# IMPORTANT: For production, set Redis maxmemory-policy to "noeviction"
# to prevent job queue data loss during memory pressure
REDIS_URL="rediss://username:password@host:port"
# OR for local Redis:
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=
REDIS_DB=0
REDIS_TLS=false

# Service identification for Redis key prefixing
SERVICE_NAME=medicalink

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=3600
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-here
JWT_REFRESH_EXPIRES_IN=604800

# Microservices Ports
API_GATEWAY_PORT=3000
ACCOUNTS_SERVICE_PORT=3001
PROVIDER_SERVICE_PORT=3002
BOOKING_SERVICE_PORT=3003
CONTENT_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# General
NODE_ENV=development
APP_NAME="MedicaLink Microservices"
API_VERSION=v1

# Super Admin Configuration (for creating initial admin account)
SUPER_ADMIN_EMAIL=admin@medicalink.com
SUPER_ADMIN_PASSWORD=SuperSecurePassword123!
SUPER_ADMIN_FULL_NAME=Super Administrator