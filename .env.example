# Service identification for Redis key prefixing
SERVICE_NAME=medicalink

JWT_ACCESS_SECRET=secret
JWT_EXPIRES_IN=900
JWT_REFRESH_SECRET=secret
JWT_REFRESH_EXPIRES_IN=604800

API_GATEWAY_PORT=3000

# Throttler Configuration
THROTTLER_SHORT_TTL=1000    # Short throttler TTL in milliseconds (default: 1 second)
THROTTLER_SHORT_LIMIT=20    # Short throttler limit (default: 20 requests)
THROTTLER_LONG_TTL=60000    # Long throttler TTL in milliseconds (default: 1 minute)
THROTTLER_LONG_LIMIT=200    # Long throttler limit (default: 200 requests)

# Orchestrator Service Configuration
ORCHESTRATOR_CACHE_TTL_SHORT=120  # 2 minutes for list/search results
ORCHESTRATOR_CACHE_TTL_MEDIUM=300 # 5 minutes for single entity composites
ORCHESTRATOR_SAGA_TIMEOUT=30000   # 30 seconds for saga execution
ORCHESTRATOR_SERVICE_TIMEOUT=10000 # 10 seconds for individual service calls

